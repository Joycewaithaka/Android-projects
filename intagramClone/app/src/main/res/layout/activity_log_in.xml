<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer_list"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="Language: English(United States)"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLanguage"
        app:srcCompat="@mipmap/ic_launcher"


        />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnSignUp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:width="1dp"
        android:background="@drawable/half_overlay"
        android:shape="rectangle"
        android:text=" Don't Have an Account? Sign Up"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:shape="rectangle"
        android:text="Forgot your log in details? Get help signing in." />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="33dp"
        android:text="Log In" />

    <TextView
        android:id="@+id/tvFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:drawableLeft="@mipmap/facebook"
        android:gravity="center"
        android:text="Login with FaceBook"
        android:textColor="@color/colorWhite"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHelp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="OR"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etUserEmail"
        android:layout_marginTop="25dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColorHint="@color/colorWhite" />

    <EditText
        android:id="@+id/etUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLogo"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="Enter Username or Email"
        android:inputType="textPersonName"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColorHint="@color/colorWhite" />

</RelativeLayout>